# Gemini Embeddings
GEMINI_API_KEY=<Your Api Key>
GEMINI_EMB_MODEL=models/text-embedding-004
GEMINI_EMB_DIM=768
GEMINI_TASK_TYPE=classification
GEMINI_EMB_RATE_LIMIT=3
GEMINI_EMB_MAX_CALLS=50
GEMINI_EMB_DRYRUN=1

# Crawl
HTTP_USER_AGENT=Mozilla/5.0 (compatible; IABVerticalizer/1.0; +https://internal.example)
HTTP_TIMEOUT=20

# Database
DB_DSN=postgresql+psycopg2://user:pass@localhost:5432/verticalizer

# S3 / MinIO (optional)
S3_ENDPOINT=http://localhost:9000
S3_BUCKET=verticalizer
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_REGION=us-east-1

# Logging
PYTHONUNBUFFERED=1
